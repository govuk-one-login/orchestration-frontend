{
  "name": "orchestration-frontend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "20.9"
  },
  "scripts": {
    "build": "npm run build-sass && npx tsc && npm run copy-assets",
    "build-sass": "rm -rf dist/public/style.css dist/govuk-frontend/all-ie8.css && sass --load-path=node_modules/govuk-frontend/govuk --no-source-map --quiet-deps src/assets/scss/application.scss:dist/public/style.css src/assets/scss/ie8.scss:dist/govuk-frontend/all-ie8.css --style compressed",
    "clean": "rm -rf dist node_modules logs.json",
    "clean-build": "npm run clean && npm i && npm run build",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ src/config/*.txt dist/ && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts -e **/all.js && cp node_modules/govuk-frontend/govuk/all.js dist/public/scripts",
    "start": "node dist/server.js",
    "test:unit": "rm -rf test/coverage && NODE_ENV=development SUPPORT_LANGUAGE_CY=1 npx mocha --recursive \"src/**/*.test.ts\"",
    "lint": "eslint . --ext .ts,.js **/translation.json",
    "pretty": "prettier --write \"*/**/*.{ts,json}\"",
    "prepare": "husky install"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js",
      "ts"
    ],
    "timeout": 20000,
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "exit": true
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "govuk-frontend": "^4.3.1",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.2.0",
    "i18next-http-middleware": "^3.4.1",
    "nunjucks": "^3.2.4",
    "sass": "^1.69.5",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.7",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.20",
    "@types/mocha": "^10.0.3",
    "@types/mock-req-res": "^1.1.5",
    "@types/node": "^20.8.10",
    "@types/nunjucks": "^3.2.1",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "mocha": "^10.2.0",
    "mocha-param": "^2.0.1",
    "mock-req-res": "^1.2.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uglifyjs": "^2.4.11"
  }
}
